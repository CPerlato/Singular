@model AlunoModel
@{
    ViewData["Title"] = "Confirmação apagar usuário";
}
<div class="text-center">
    <h3>Realmente deseja apagar o aluno: <strong>@Model.Nome ?</strong></h3>
</div>

<a class="btn btn-primary btn-block" asp-action="Index" asp-controller="Aluno" role="button">Cancelar Exclusão</a>
<a class="btn btn-secondary btn-block" asp-action="Apagar" asp-controller="Aluno" asp-route-id="@Model.Id" role="button">Apagar Aluno</a>
@using Singular.Enums;
@model AlunoModel
@{
    ViewData["Title"] = "Cadastrar Aluno";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Aluno</h1>
</div>

<form asp-controller="Aluno" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome" />
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="cpf" class="form-label">CPF</label>
        <input type="text" asp-for="CPF" class="form-control" placeholder="Digite o CPF" />
        @Html.ValidationMessageFor(x => x.CPF)
    </div>

    <div class="form-group">
        <label for="celular" class="form-label">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o telefone" />
        @Html.ValidationMessageFor(x => x.Celular)
    </div>

    <div class="form-group">
        <label for="dataNascimento" class="form-label">Data de Nascimento</label>
        <input type="text" asp-for="DataNascimento" class="form-control" placeholder="Digite a data de nascimento" />
        @Html.ValidationMessageFor(x => x.DataNascimento)
    </div>

    <div class="form-group">
        <label for="endereco" class="form-label">Endereço</label>
        <input type="text" asp-for="Endereco" class="form-control" placeholder="Digite o endereço" />
        @Html.ValidationMessageFor(x => x.Endereco)
    </div>

    <div class="form-group">
        <label for="nomeDoResponsavel" class="form-label">Nome do Responsavel</label>
        <input type="text" asp-for="NomeDoResponsavel" class="form-control" placeholder="Digite o nome do responsavel" />
        @Html.ValidationMessageFor(x => x.NomeDoResponsavel)
    </div>

    <div class="form-group">
        <label for="telefoneDoResponsavel" class="form-label">Telefone do Responsavel</label>
        <input type="text" asp-for="TelefoneDoResponsavel" class="form-control" placeholder="Digite o Telefone do responsavel" />
        @Html.ValidationMessageFor(x => x.TelefoneDoResponsavel)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secundary btn-block" asp-action="Index" asp-controller="Aluno" role="button">Voltar</a>
</form>
@using Singular.Enums;
@model AlunoModel
@{
    ViewData["Title"] = "Cadastrar Aluno";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center">
                    <h1 class="display-4">Cadastrar Aluno</h1>
                </div>

                <form asp-controller="Aluno" asp-action="Criar" method="post">

                    <div class="form-group">
                        <label for="nome" class="form-label">Nome</label>
                        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome" />
                        @Html.ValidationMessageFor(x => x.Nome)
                    </div>

                    <div class="form-group">
                        <label for="cpf" class="form-label">CPF</label>
                        <input type="text" asp-for="CPF" class="form-control" placeholder="Digite o CPF" />
                        @Html.ValidationMessageFor(x => x.CPF)
                    </div>

                    <div class="form-group">
                        <label for="celular" class="form-label">Celular</label>
                        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o telefone" />
                        @Html.ValidationMessageFor(x => x.Celular)
                    </div>

                    <div class="form-group">
                        <label for="dataNascimento" class="form-label">Data de Nascimento</label>
                        <input type="text" asp-for="DataNascimento" class="form-control" placeholder="Digite a data de nascimento" />
                        @Html.ValidationMessageFor(x => x.DataNascimento)
                    </div>

                    <div class="form-group">
                        <label for="endereco" class="form-label">Endereço</label>
                        <input type="text" asp-for="Endereco" class="form-control" placeholder="Digite o endereço" />
                        @Html.ValidationMessageFor(x => x.Endereco)
                    </div>

                    <div class="form-group">
                        <label for="nomeDoResponsavel" class="form-label">Nome do Responsável</label>
                        <input type="text" asp-for="NomeDoResponsavel" class="form-control" placeholder="Digite o nome do responsável" />
                        @Html.ValidationMessageFor(x => x.NomeDoResponsavel)
                    </div>

                    <div class="form-group">
                        <label for="telefoneDoResponsavel" class="form-label">Telefone do Responsável</label>
                        <input type="text" asp-for="TelefoneDoResponsavel" class="form-control" placeholder="Digite o Telefone do responsável" />
                        @Html.ValidationMessageFor(x => x.TelefoneDoResponsavel)
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
                    <a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="Aluno" role="button">Voltar</a>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>

@model Views_Home_Index
@{
    ViewData["Title"] = "Home";
}
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<head>
    <style>
        * {
            margin: 0px;
            padding: 0px;
            font-size: 1.2rem;
            font-family: Zen Kaku Gothic Antique;
        }

        .logo {
            width: auto;
            height: 50px;
            background: 0;
        }

        /* Reduza o tamanho do contêiner de busca e do ícone */
        .form-control {
            width: 20%; /* Defina a largura desejada */
            padding: 10px;
            cursor: pointer;
        }

        .input-group-text {
            font-size: 1rem; /* Ajuste o tamanho do ícone de pesquisa conforme necessário */
        }

        a {
            text-decoration: none;
        }

        /* Reduza o tamanho do aviso e ajuste o posicionamento */
        .aviso {
            width: 200px; /* Defina a largura desejada */
            height: 150px;
            background-color: #CCEEEE;
            padding: 10px;
            top: 20px;
            left: 998px; /* Ajuste a posição conforme necessário */
            border-radius: 20px;
            text-align: center;
        }

        .perfil {
            text-align: left;
            background: #EEE5E1;
            width: 208px; /* ajuste conforme necessário */
            height: auto;
            border-radius: 5px;
            display: grid;
        }

        #buscar {
            height: 100px;
            width: 300px;
            right: 5px;
            align-content: center;
            cursor: pointer;
        }

        h1 {
            height: 40px;
            padding: 5px;
        }

        .header {
            width: 100%;
            display: flex;
        }

        hr {
            width: 87%;
            float: right;
        }

        .table-container {
            text-align: center;
            margin-top: 50px;
        }

        table {
            margin: 0 auto;
            display: inline-block;
            text-align: left;
        }

        .table, th, td {
            border: 1px solid #000;
            padding: 10px;
            text-align: left;
        }

    </style>
</head>
<body>
    <div class="content">
        <div class="container">
            <h1>PROCURE</h1>
            <div class="row">
                <div class="col-md-8">
                    <div class="input-group mb-3" id="buscar">
                        <input type="text" class="form-control" placeholder="Procure sua turma" aria-label="Campo de busca" aria-describedby="icone-lupa">
                        <span class="input-group-text" id="icone-lupa">
                            <ion-icon name="search-outline"></ion-icon>
                        </span>
                    </div>
                </div>
                <div class="aviso">
                    <strong>AVISO</strong>
                    <img src="~/alert.png" />
                </div>
            </div>
        </div>
    </div>
    <hr />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-fz5g0b2mAIwz3R6oyD9t9z5u5c3CkOKd7wBdFg5A+Jw5a6L5pma7qE2iu0w11OjI" crossorigin="anonymous"></script>
</body>

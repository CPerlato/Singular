<body class="home-page">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <div class="input-group mb-2" id="buscar">
                        <h1>PROCURE</h1>
                        <input type="text" class="form-control" placeholder="Procure sua turma" aria-label="Campo de busca" aria-describedby="icone-lupa">
                        <span class="input-group-text" id="icone-lupa">
                            <ion-icon name="search-outline"></ion-icon>
                        </span>
                    </div>
                </div>
                <div class="aviso">
                    <strong>AVISO</strong>
                    <img src="~/alert.png" />
                </div>
            </div>
        </div>
    </div>
    <div>
        <div>
            <h3>TURMAS</h3>
            <form id="turmaForm">
                <select id="turmaSelect" class="form-select form-select-lg mb-2">
                    <option selected>Selecione a turma</option>
                    <option value="1">3°s</option>
                </select>
            </form>
        </div>

        <!-- Adicione um script para redirecionar ao selecionar uma turma -->
        <script>
            document.getElementById('turmaSelect').addEventListener('change', function () {
                var selectedTurma = document.getElementById('turmaSelect').value;

                if (selectedTurma !== "") {
                    // Construa a URL com base na turma selecionada
                    var url = '/Aluno/Index?turma=';

                    // Redirecione para a URL construída
                    window.location.href = url;
                }
            });
        </script>


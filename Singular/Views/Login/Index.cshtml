    @model LoginModel 
@{
    Layout = "_LayoutDeslogada";
    ViewData["Title"] = "Login";
}


    <style>
        .logo-login{
        background: url("/pattern-c.png") repeat fixed;
            height:100vh;
        }

    .centro-vertical{
        margin-top:20%;
    }
    
      
    </style>    
 <div class="row">
    <div class="col-5 logo-login">
          
    </div>
    <div class="col-7">
        <div class="row centro-vertical">
            <div class="col-6 offset-3">
                <div id="img">
                    <img src="~/image 13.png" />
                    @if (TempData["MensagemErro"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["MensagemErro"]
                            </div>
                    }
                </div>
                <div>
                    <form id="form" action="/Login/entrar" method="post">
                        <div class="mb-3">
                            <label for="login" class="form-label">Email</label>
                            <input type="text" asp-for="Email" class="form-control" id="login">
                        </div>
                        <div class="mb-3">
                            <label for="senha" class="form-label">Senha</label>
                            <input type="password" asp-for="Senha" class="form-control" id="senha">
                        </div>
                        <button id="button" type="submit" class="btn btn-primary">Continuar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@model Views_Conta_Index;

<!DOCTYPE html>
<html>
<head>
    <title>Registro de Conta</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css">

    <style>

        * {
            margin: 0px;
            padding: 0px;
            font-size: 1.2rem;
            font-family: Zen Kaku Gothic Antique;
        }

        h1 {
            text-align: center;
            padding: 20px;
            top: 59px;
        }

        .container {
            margin-left: auto;
            margin-right: auto;
            width: 60%;
            padding: 30px 0;
        }


        .form {
            background-color: #fbfbff;
            border: 5px solid #fbfbff;
            border-radius: 5px;
            align-content: center;
            left: 359px;
            width: 100%;
            top: 414px;
        }

        
        .upload-button {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 241px;
            height: 241px;
            border-radius: 50%;
            background-color: #7D9CAB;
            color: #fff;
            cursor: pointer;
            z-index:2;           
        }

            #img-icon {
            display: block;                
            width: 63px;
            height: 63px;          
            margin-left: auto;
            margin-right: auto;
            margin-top: 0%;
            z-index:1;
         
        }
                
        /* Esconde o input de arquivo padrão */
        #upload {
            display: none;
        }
        
    </style>
</head>
<body>
    <div class="container">
        <h1>Sua Conta</h1>
        <hr />
        <input type="file" id="upload" class="hidden" accept="image/*">
        <label for="upload" class="upload-button"><img id="img-icon" src="~/Rectangle 36@2x.png" alt=""></label>
        <form class="form">
            <div class="mb-3">                      
                <div class="mb-3">
                    <label for="nome" class="form-label">Nome da Pessoa</label>
                    <input type="text" class="form-control" id="nome" name="nome" required>
                    <hr />
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                        <hr />
                        <div class="mb-3">
                            <label for="dataNascimento" class="form-label">Data de Nascimento</label>
                            <input type="date" class="form-control" id="dataNascimento" name="dataNascimento" required>
                            <hr />
                            <div class="mb-3">
                                <label for="senha" class="form-label">Senha</label>
                                <input type="password" class="form-control" id="senha" name="senha" required>
                                <hr />
                                <div class="mb-3">
                                    <label for="idioma" class="form-label">Idioma</label>
                                    <select class="form-select" id="idioma" name="idioma" required>
                                        <option value="portugues">Português</option>
                                        <option value="ingles">Inglês</option>
                                        <option value="espanhol">Espanhol</option>
                                        <option value="outro">Outro</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
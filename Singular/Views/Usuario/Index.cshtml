@model List<UsuarioModel>
@{
    ViewData["Title"] = "Alunos";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn " btn-primary" asp-controller="Usuario" asp-action="Criar" role="button">Adicionar novo usuario</a>
    </div>

    <h1 class="display-4">Listagem de Alunos</h1>

    <table id="table-usuarios" class="display" style="width:60%">
        <thead>
            <tr>
                <th scope="col">RA</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">Email</th>
                <th scope="col">Perfil</th>
                <th scope="col">Data de Cadastro</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var usuario in Model)
                {
                    <tr>
                        <th scope="row">@usuario.Id</th>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Login</td>
                        <td>@usuario.Email</td>
                        <td>@(usuario.Perfil == Singular.Enums.PerfilEnum.Admin ? "Administrador" : "Professor")</td>
                        <td>@usuario.DataCadastro</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" asp-action="Editar" asp-controller="Usuario" asp-route-id="@usuario.Id" class="btn btn-primary">Editar</a>
                                <a role="button" asp-action="ApagarConfirmacao" asp-controller="Usuario" asp-route-id="@usuario.Id" class="btn btn-primary">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr calss="odd"><td valign="top" colspan="5">Nenhum Usuário Encontrado</td></tr>
            }
        </tbody>

    </table>


</div>
